{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["dom", "es2021"],
      "baseUrl": "./",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "allowImportingTsExtensions": true,
      "allowJs": true,
      "paths": {
        "*.ts": ["*"]
      },
      "typeRoots": ["./types"]
    },
    "include": ["./routes", "./", "./src","./script"]
  }
  