{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "allowImportingTsExtensions": true,
      "paths": {
        "*.ts": ["*"]
      }
    },
    "include": ["./"]
  }
  